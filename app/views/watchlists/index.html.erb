<h1>Here are all items on everyone's watchlists</h1>

<% @watchlists.each do |watchlist| %>
    <tr>
        <td>
            <%= watchlist.name %>
        </td>
        <td>
            <%= watchlist.description %>
        </td>

        <% if @user.id == current_user.id %>
            <td>
                <%= link_to 'Delete', user_watchlist_path(@user, watchlist), :method => :delete %>
            </td>
            <% end %>
                <% end %>



                    <%= link_to "Add a stock to the watchlist", new_user_watchlist_path(current_user) %>