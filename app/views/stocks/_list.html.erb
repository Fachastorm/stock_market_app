<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Symbol</th>
            <th>Current Price</th>
            <% if @user.id == current_user.id %>
                <th>Actions</th>
                <% end %>
        </tr>
    </thead>
    <tbody>
        <% @positions.each do |position| %>
            <tr>
                <td>
                    <%= position.stock.name %>
                </td>
                <td>
                    <%= position.stock.ticker %>
                </td>
                <td>
                    <%= position.stock.price %>
                </td>

                <% if @user.id == current_user.id %>
                    <td>
                        <%= link_to 'Delete', user_position_path(@user, position), :method => :delete %>
                    </td>
                    <% end %>
            </tr>
            <% end %>
    </tbody>